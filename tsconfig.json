{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "transpileOnly": true,
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "strict": true,
    "module": "ESNext", // ES2020
    "target": "ES2020",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true,
  }
}
